Program Soma2Nums;
Var
	num1 : integer;
	num2 : integer;

 Begin
 
 	writeln('Programa para a soma de dois números:');
 	writeln('Digite o primeiro número:');
 	readln(num1);
 	
 	writeln('Digite o segundo número:');
 	readln(num2);
 	
 	write('A soma destes dois números é:');
 	write(num1 + num2);
  
 End.